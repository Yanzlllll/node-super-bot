<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>
<h1><%= title %></h1>

<form method="POST">

    <p>1.请选择版本</p>
    <div>
        <select id="selectVersion" name="selectVersion" onchange="gradeChange()">
            <% targets.forEach(function(target){ %>
            <option value= <%- target.version %>><%- target.version %></option>
            <% }) %>
        </select>
    </div>

    <iframe style="margin-top:10px" frameborder="0" id="iframe" frameborder="0" width="100%" height="200"></iframe>

    <p>2.补增渠道</p>
    <div>
        <textarea name="txtChannel" cols=40 rows=4> </textarea>
    </div>

    <p>3.请填写授权码</p>
    <div>
        <textarea name="txtV" cols=40 rows=1> </textarea>
    </div>

    <input type="submit" value="提交" style="margin-top:10px">
</form>

<script type="text/javascript">

    gradeChange();

    function gradeChange() {
        var objS = document.getElementById("selectVersion");
        var version = objS.options[objS.selectedIndex].value;
        document.getElementById("iframe").src = '/jiayaosu/filelist?v=' + version; 
    }

    function resize(height) {
        var iframe = document.getElementById('iframe');
        iframe.style.height = height + 'px';
    }
</script>
</body>
</html>
